apiVersion: v1
kind: ServiceAccount
metadata:
  name: qourier-quick
  namespace: qouriers
---
apiVersion: rbac.authorization.k8s.io/v1
kind: Role
metadata:
  name: qourier-quick
  namespace: qouriers
rules:
- apiGroups:
  - queries.qouriers.io
  resources:
  - apiqueries
  verbs:
  - get
  - list
---
kind: RoleBinding
apiVersion: rbac.authorization.k8s.io/v1
metadata:
  name: qourier-quick
  namespace: qouriers
subjects:
- kind: ServiceAccount
  name: qourier-quick
roleRef:
  kind: Role
  name: qourier-quick
  apiGroup: rbac.authorization.k8s.io
---
apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    app: qourier-quick
    queries.qouriers.io/keyspace: {{ keyspace }}
  name: qourier-quick-{{ keyspace }}
  namespace: qouriers
spec:
  replicas: 1
  selector:
    matchLabels:
      app: qourier-quick
      queries.qouriers.io/keyspace: {{ keyspace }}
  template:
    metadata:
      labels:
        app: qourier-quick
        queries.qouriers.io/keyspace: {{ keyspace }}
    spec:
      serviceAccountName: qourier-quick
      containers:
      - image: qouriers:latest
        name: qourier-quick
        args: 
        - "app.quick:app"
        ports:
        - containerPort: 80
        imagePullPolicy: Never
        env:
          - name: KEYSPACE
            value: {{ keyspace }}
        readinessProbe:
          httpGet:
            path: /ready
            port: 80
          periodSeconds: 5
        volumeMounts:
          - name: podinfo
            mountPath: /etc/podinfo
      volumes:
        - name: podinfo
          downwardAPI:
            items:
              - path: "labels"
                fieldRef:
                  fieldPath: metadata.labels
