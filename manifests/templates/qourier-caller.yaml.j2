apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    app: qourier-caller
    keys.qouriers.io/keyspace: {{ keyspace }}
  name: qourier-caller-{{ keyspace }}
  namespace: qouriers
spec:
  replicas: 1
  selector:
    matchLabels:
      app: qourier-caller
      keys.qouriers.io/keyspace: {{ keyspace }}
  template:
    metadata:
      labels:
        app: qourier-caller
        keys.qouriers.io/keyspace: {{ keyspace }}
    spec:
      serviceAccountName: qourier-caller
      containers:
      - image: qouriers:latest
        name: caller
        args: 
        - "app.caller:app"
        ports:
        - containerPort: 80
        imagePullPolicy: Never
        env:
          - name: KEY_ID
            value: "0"        # replace this later
        readinessProbe:
          httpGet:
            path: /ready
            port: 80
          periodSeconds: 5
        volumeMounts:
          - name: podinfo
            mountPath: /etc/podinfo
      volumes:
        - name: podinfo
          downwardAPI:
            items:
              - path: "labels"
                fieldRef:
                  fieldPath: metadata.labels
