apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    app: qourier-queue
    keys.qouriers.io/keyspace: {{ keyspace }}
  name: qourier-queue-{{ keyspace }}
  namespace: qouriers
spec:
  replicas: 1
  selector:
    matchLabels:
      app: qourier-queue
      keys.qouriers.io/keyspace: {{ keyspace }}
  template:
    metadata:
      labels:
        app: qourier-queue
        keys.qouriers.io/keyspace: {{ keyspace }}
    spec:
      serviceAccountName: qourier-queue
      containers:
      - image: qouriers:latest
        name: query-queue
        args: 
        - "app.queue:app"
        ports:
        - containerPort: 80
        imagePullPolicy: Never
        env:
          - name: QUEUE_ID
            value: queueid        # replace this later
        readinessProbe:
          httpGet:
            path: /ready
            port: 80
          periodSeconds: 5
        livenessProbe:
          httpGet:
            path: /apiqueries
            port: 80
          periodSeconds: 10
        volumeMounts:
          - name: podinfo
            mountPath: /etc/podinfo
      volumes:
        - name: podinfo
          downwardAPI:
            items:
              - path: "labels"
                fieldRef:
                  fieldPath: metadata.labels
